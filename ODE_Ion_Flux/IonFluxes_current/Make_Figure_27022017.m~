%% For a given data set generated for fixed nu_ATP and dye conductivity, plot
% Impact on Osmotic pressure (%), Impact on V_m (%) and Load time as function
% of dye conductivity and extracellular concentration

clear all

figure(1)

% subplot 1
h1 = subplot(2 , 2 , 1);
load('data/27022017_DyeData_pHe=7_nuATP=5000000000.mat')

imagesc(log10(v.Dye_e) , log10(v.g_Dye) , v.V_m' / v.V_m(1 , 1));

xlim(log10([v.Dye_e(1) , v.Dye_e(end)]))
ylim(log10([v.g_Dye(1) , v.g_Dye(end)]))
caxis([0.7 1])


title_s1 = title('\nu_{ATP} = 5.10^9 ATP/hour, pHe = 7' , 'fontsize' , 13);

set(gca , 'fontsize' , 14)

grid off

% subplot 2
h2 = subplot(2 , 2 , 2);
load('data/27022017_DyeData_pHe=7_nuATP=20000000000.mat')

imagesc(log10(v.Dye_e) , log10(v.g_Dye) , v.V_m' / v.V_m(1 , 1));

xlim(log10([v.Dye_e(1) , v.Dye_e(end)]))
ylim(log10([v.g_Dye(1) , v.g_Dye(end)]))
caxis([0.7 1])

title_s2 = title('\nu_{ATP} = 20.10^9 ATP/hour, pHe = 7' , 'fontsize' , 13);

set(gca , 'fontsize' , 14)

grid off

% subplot 3
h3 = subplot(2 , 2 , 3);
load('data/27022017_DyeData_pHe=5.500000e+00_nuATP=5000000000.mat')

imagesc(log10(v.Dye_e) , log10(v.g_Dye) , v.V_m' / v.V_m(1 , 1));

xlim(log10([v.Dye_e(1) , v.Dye_e(end)]))
ylim(log10([v.g_Dye(1) , v.g_Dye(end)]))
caxis([0.7 1])

title_s3 = title('\nu_{ATP} = 5.10^9 ATP/hour, pHe = 5.5' , 'fontsize' , 13);

set(gca , 'fontsize' , 14)

grid off

% subplot 4
h4 = subplot(2 , 2 , 4);
load('data/27022017_DyeData_pHe=5.500000e+00_nuATP=20000000000.mat');

imagesc(log10(v.Dye_e) , log10(v.g_Dye) , v.V_m' / v.V_m(1 , 1));

xlim(log10([v.Dye_e(1) , v.Dye_e(end)]))
ylim(log10([v.g_Dye(1) , v.g_Dye(end)]))
caxis([0.7 1])

title_s4 = title('\nu_{ATP} = 20.10^9 ATP/hour, pHe = 5.5' , 'fontsize' , 13);

set(gca , 'fontsize' , 14)

grid off

cbar = colorbar;

y_label = ylabel('log_{10}(ATP invested) [molecs/hour/cell]' , 'fontsize' , 18);
x_label = xlabel('log_{10}(Medium pH)' , 'fontsize' , 18);

posx=get(x_label,'Pos');
set(x_label,'Pos',[0.10000001 posx(2) + 1e-4 posx(3)])

posy=get(y_label,'Pos');
set(y_label,'Pos',[1e-16 10 posy(3)])

set(cbar    , 'Position' , [0.92 , 0.1 , 0.02 , 0.8])
set(x_label , 'Position' , get(x_label,'Position') - [0.1 0 0]) 
set(y_label , 'Position' , get(y_label,'Position') - [0 0 0]) 

% Rescale size of subplot
RescalingFactor = 0.9;

% Step 2:
p1 = get(h1 , 'position');
p2 = get(h2 , 'position');
p3 = get(h3 , 'position');
p4 = get(h4 , 'position');

% Step 2: update position/size
p1(3) = p1(3) * RescalingFactor;
p1(4) = p1(4) * RescalingFactor;

p2(3) = p2(3) * RescalingFactor;
p2(4) = p2(4) * RescalingFactor;

p3(3) = p3(3) * RescalingFactor;
p3(4) = p3(4) * RescalingFactor;

p4(3) = p4(3) * RescalingFactor;
p4(4) = p4(4) * RescalingFactor;

% Step3: Impose rescaling
set(h1 , 'position' , p1) 
set(h2 , 'position' , p) 
set(h3 , 'position' , p) 
set(h4 , 'position' , p) 

c_label = ylabel(cbar, 'Membrane Potential [mVolt]' , 'rot' , -90);

set(c_label , 'fontsize' , 18)
set(gca , 'fontsize' , 14)

print(gcf , 'Figures/Dye_Delta_Vm.eps' , '-dpsc2')